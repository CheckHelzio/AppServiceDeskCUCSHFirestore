<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ccv.checkhelzio.servicedeskcucsh">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Portada"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IncidenteListActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize"/>
        <activity
            android:name=".IncidenteDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FormularioTabletActivity"
            android:theme="@style/AppTheme.Dark.NoActionBar" />



        <activity
            android:name=".DialogTipoIncidente"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:theme="@style/AppTheme.Translucent"
            android:windowSoftInputMode="adjustNothing">
        </activity>

    </application>

</manifest>